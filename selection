
#include <stdio.h>

void arr(int a[], int n);
void in(int a[], int n);
void selection(int a[], int n);
void swap(int *a, int *b);

void arr(int a[], int n)
{
    for(int i = 0; i < n; i++)
    {
        printf("Phan tu %d: ", i + 1);
        scanf("%d", &a[i]);
    }
}

void in(int a[], int n)
{
    for(int i = 0; i < n; i++)
    {
        printf("%d. %d\n", i + 1, a[i]);
    }
}

void swap(int *a, int *b)
{
    int temp = *a;
    *a = *b;
    *b = temp;
}

void selection(int a[], int n)
{
    for(int i = 0; i < n - 1; i++)
    {
        int max = i;
        for(int j = i + 1; j < n; j++)
        {
            if(a[j] > a[max])
                max = j;
        }
        swap(&a[i], &a[max]);
    }
}

int main()
{
    int a[10], n;
    printf("Nhap vao so phan tu: ");
    scanf("%d", &n);


    selection(a, n);
    in(a, n);

    return 0;
}
