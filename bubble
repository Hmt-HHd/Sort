#include<stdio.h>

void arr(int a[], int n);
void in(int a[], int n);
void bubble(int a[], int n);
void swap(int *a, int *b);

void arr(int a[], int n)
{
    for(int i = 0; i < n; i++)
    {
        printf("Phan tu %d: ", i + 1);
        scanf("%d", &a[i]);
    }
}

void in(int a[], int n)
{
    for(int i = 0; i < n; i++)
    {
        printf("%d. %d\n", i + 1, a[i]);
    }
}

void swap(int *a, int *b)
{
    int temp = *a;
    *a = *b;
    *b = temp;
}

void bubble(int a[],int n)
{   
    int change=0;
    for(int i=n-1;i>=1;i--)
    {
      for(int j=0;j<=(i-1);++j)
      {
       if(a[j]<a[j+1])
        {
         swap(&a[j],&a[j+1]);
         change=1;
        }
      }
     if(change==0) break;
    }
}

int main()
{
    int a[10],n;
    printf("Nhap n: ");
    scanf("%d",&n);
    arr(a,n);
    bubble(a,n);
    in(a,n);
    return 0;
}
